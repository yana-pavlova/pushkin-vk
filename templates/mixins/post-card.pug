mixin post-card(post)
    .card-post
        .row
            //- avatar pic
            //- .col-xs-3.col-sm-2
            //-     a(href='/profile/' + post.author)
            //-         img.img-circle.img-user(src=post.author.authorPhoto, alt=post.author.authorName.full)
            //- author name
            .col-xs-9.col-sm-10.info-user
                h3
                    a(href='/profile/' + post.author.slug) #{post.author.authorName.full}
                p
                    i
                        if post.publishedDate
                            | #{post._.publishedDate.format('MMMM Do, YYYY')}
                p
                    | #{post.slug}

